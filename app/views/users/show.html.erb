<%= render partial: 'partials/header' %>

<div class="container">
  <div class="row">
    <div class="col s12 center">
      <div class="account-content">
        <p class='account-header'>Edit Account Info</p>
        <h6 id = "success"> <%= flash[:success] %></h6>
		<%= form_for @user do |f| %>
		  <p> Email <%= f.text_field :email, :placeholder => @user.email %> </p>
		  <p> Password <%= f.password_field :password %> </p>
		  <p> Password Confirmation <%= f.password_field :password_confirmation %> </p>
		  <%=f.submit "Submit", class: "btn btn-primary" %>
		<%end%>
      </div>
    </div>
  </div>
</div>


<%= render partial: 'partials/footer' %>
