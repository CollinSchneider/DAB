

    <div class="container" id='landing-container'>
      <div id="cover-photo">
        <div class="row">
          <div class="col s12">
            <div class="card grey lighten-2 center" id='login-container'>
              <div class="card-content white-text">
                <span class="card-title" id='logo'>Deal Baked</span>
                <div class="row">
                  <div class="input-field col s12">
                    <%= form_tag sessions_path do %>
                    <%= text_field_tag :email %>
                    <%= password_field_tag :password %>
                    <%= submit_tag "Login", :class => "btn waves-effect grey darken-3", :style=> "width:300px" %>
                    <% end %>
                  </div>
                  <div class="input-field col s12">
                    <p class='black-text'>OR</p>
                  </div>
                  <div class="input-field col s12">
                    <!-- <button class="btn waves-effect light-blue darken-4" type="submit" name="action" style='width:300px;'><i class="fa fa-facebook fa-1"></i>  LOGIN WITH FACEBOOK</button> -->
                    <%= link_to "LOGIN WITH FACEBOOK", "/auth/facebook", id: "sign_in", :class => 'btn light-blue darken-4', :style => 'width:300px;'%>
                  </div>
                  <div class="input-field col s12">
                    <p class='black-text'>Not a member? <a id='sign-up-tag' href="">Sign Up!</a></p>
                  </div>
                  <%= form_for @user do |f| %>
                  <%= f.email_field :email %>
                  <%= f.password_field :password %>
                  <%= f.hidden_field :status, :value => 0 %>
                  <%= f.submit "Create User", :class => "btn waves-effect grey darken-3", :style=> "width:300px" %>
                  <% end %>
              </div>
              <div class="card-action">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
