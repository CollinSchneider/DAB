
    <%= render partial: 'nav' %>

    <main>
      <% if flash[:success] %>
        <div class="success-div">
          <h6 class = "success-text"> <%= flash[:success] %> </h6>
        </div>
      <% end %>
      <% if flash[:error] %>
        <div class="error-div">
          <h6 class = "error-text"> <%= flash[:error] %> </h6>
        </div>
      <% end %>
      <div class="container" id='main-content'>
        <div class="row">
          <div class="col s12 left">
            <h3>Affiliates</h3>
          </div>
        </div>
        <div class="row">
        <div class="col l4 s12">
          <div class="metric-box">
            <div class="metric-heading">
              <p><i id='fa-metric' class="fa fa-user-plus" aria-hidden="true"></i>Total Affiliates</strong><p>
            </div>
            <div class="metric-body">
              <h4><%= @total_affiliates%></h4>
            </div>
          </div>
        </div>
        <div class="col l4 s12">
          <div class="metric-box">
            <div class="metric-heading">
              <p><i id='fa-metric' class="fa fa-calendar-plus-o" aria-hidden="true"></i>New This Month</strong><p>
            </div>
            <div class="metric-body">
              <h4><%= @total_month%></h4>
            </div>
          </div>
        </div>
        <div class="col l4 s12">
          <div class="metric-box">
            <div class="metric-heading">
              <p><i id='fa-metric' class="fa fa-calendar-check-o" aria-hidden="true"></i>New This Year</strong><p>
            </div>
            <div class="metric-body">
              <h4><%= @total_year%></h4>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col l6 s12">
          <div class="metric-box">
            <div class="metric-heading">
              <h5>Affiliates/Year</h5>
            </div>
            <div style='max-height:300px'>
              <canvas id="myChart"></canvas>
            </div>
          </div>
        </div>
        <div class="col l6 s12">
          <div class="metric-box">
            <div class="metric-heading">
              <p><i id='fa-metric' class="fa fa-user-plus" aria-hidden="true"></i>All Affiliates</strong><p>
            </div>
            <div class="metric-body">
              <table class='cms-table'>
                <tbody>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Total Sales</th>
                    <th class='right'>Action</th>
                  </tr>

                  <% @affiliates.each do  |affiliate| %>
                    <tr>
                      <td><%=  affiliate.id %></td>
                      <td><%=  affiliate.email %></td>
                      <td><%=  affiliate.email %></td>
                      <td class='right'><a class='action-icons' href=""><i class="fa fa-eye" aria-hidden="true"></i></a><a class='action-icons' href=""></i></a></td>
                    </tr>
                  <% end %>
                  
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
