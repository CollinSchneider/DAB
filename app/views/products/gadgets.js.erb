
  $("<%=j render(:partial => 'gadget') %>")
  .appendTo($(".infinite-table"));

// Update pagination link
<% if @gadgets.current_page === @gadgets.total_pages %>
  $('.pagination').remove();
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page(@gadgets, 'Next Page', :remote => true) %>");
<% end %>
