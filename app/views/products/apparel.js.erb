var rendered;
function loadProducts(){
  rendered = $("<%=j render(:partial => 'apparel') %>")
};
function appendProducts(){
  rendered.appendTo($('.infinite-table'))
}
loadProducts()
setTimeout(appendProducts, 200);

// Update pagination link
<% if @apparel.current_page === @apparel.total_pages %>
  $('.pagination').remove();
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page(@apparel, '', :remote => true) %>");
<% end %>
