var rendered;
function loadProducts(){
  rendered = $("<%=j render(:partial => 'product') %>")
};
function appendProducts(){
  rendered.appendTo($('.infinite-table'))
}
loadProducts()
setTimeout(appendProducts, 200);

// Update pagination link
<% if @new_arrivals.current_page === @new_arrivals.total_pages %>
  $('.pagination').remove();
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page(@new_arrivals, 'Next Page', :remote => true) %>");
<% end %>
