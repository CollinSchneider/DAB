var rendered;
function loadProducts(){
  rendered = $("<%=j render(:partial => 'product') %>")
};
function appendProducts(){
  rendered.appendTo($('.infinite-table'))
}
loadProducts()
setTimeout(appendProducts, 200);
// renderProduct();
// setTimeout(renderProduct, 1000);

// Update pagination link
<% if @products.current_page === @products.total_pages %>
  $('.pagination').remove();
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page(@products, '', :remote => true) %>");
<% end %>
