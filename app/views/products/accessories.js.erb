var rendered;
function loadProducts(){
  rendered = $("<%=j render(:partial => 'product') %>")
};
function appendProducts(){
  rendered.appendTo($('.infinite-table'))
}
loadProducts()
setTimeout(appendProducts, 200);

// Update pagination link
<% if @accessories.current_page === @accessories.total_pages %>
  $('.pagination').remove();
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page(@accessories, 'Next Page', :remote => true) %>");
<% end %>
