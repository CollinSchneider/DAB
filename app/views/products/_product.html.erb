<% @products.each do |product| %>

<div class="col 14 m12 s12 product" style="display:inline-block">
  <div class="card" style="width:400px; height:420px">
     <a href="/products/{{product.id}}">
      <div class="card-image">
        <%= image_tag product.image.url(:medium), :id => "product-image", :class => "responsive-img" %>
        <div class="card-title" id = "card-category-title">
          <div style="font-size: 18px; font-weight: bold; color:white">
            <%= product.title %>
          </div>
          <div style="font-size:16px">
              $<%= product.price %>.00
            </div>
          </div>
        </div>
      </a>
    </div>

<% end %>
