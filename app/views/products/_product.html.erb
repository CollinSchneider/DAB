<% @products.each do |product| %>
  <div id = "product" style = "border: 1px solid black; width: 30%; text-align: center; margin: 5px; display:inline-block">
    <h4><%= link_to product.title, product_path(product.id) %> </h4>
    <%= image_tag product.image.url(:medium) %>
    <h6>$<%= product.price %></h6>
  </div>
<% end %>
